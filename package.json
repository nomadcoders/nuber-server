{
  "name": "nuber-server",
  "version": "1.0.0",
  "description": "Server for the (N)Uber Clone Course on Nomad Academy. GraphQL, Typescript, NodeJS",
  "main": "index.js",
  "repository": "https://github.com/nomadcoders/nuber-server",
  "author": "Nicolás Serrano Arévalo <itnico.las.me@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/mailgun-js": "^0.16.0",
    "@types/node": "^10.5.0",
    "@types/twilio": "^0.0.9",
    "babel-runtime": "^6.26.0",
    "copy": "^0.3.2",
    "dotenv": "^6.0.0",
    "gql-merge": "^0.0.6",
    "graphql-to-typescript": "^0.1.2",
    "nodemon": "^1.17.5",
    "ts-node": "^7.0.0",
    "tslint-config-prettier": "^1.13.0",
    "typescript": "^2.9.2"
  },
  "scripts": {
    "predev": "yarn run types",
    "dev": "cd src && nodemon --exec ts-node index.ts -e ts,graphql",
    "pretypes": "gql-merge --out-file ./src/schema.graphql ./src/api/**/*.graphql",
    "types": "graphql-to-typescript ./src/schema.graphql ./src/types/graph.d.ts",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "postbuild": "cd src && copy ./api/**/*.graphql ../dist/api"
  },
  "dependencies": {
    "bcrypt": "^2.0.1",
    "class-validator": "^0.8.5",
    "cors": "^2.8.4",
    "graphql-tools": "^3.0.4",
    "graphql-yoga": "^1.14.10",
    "helmet": "^3.12.1",
    "jsonwebtoken": "^8.3.0",
    "mailgun-js": "^0.19.0",
    "merge-graphql-schemas": "^1.5.2",
    "morgan": "^1.9.0",
    "pg": "^7.4.3",
    "twilio": "^3.17.4",
    "typeorm": "^0.2.7"
  }
}
